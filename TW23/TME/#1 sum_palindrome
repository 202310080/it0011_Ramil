def is_palindrome(num):
    return str(num) == str(num)[::-1]

def process_file(filename):
    try:
        with open(filename, "r") as file:
            lines = file.readlines()
            
        for i, line in enumerate(lines, start = 1):
            numbers = [int(num) for num in line.strip().split(",")]
            total = sum(numbers)
            result = "Palindrome" if is_palindrome(total) else "Not a palindrome"
            print(f"Line {i}: {', '.join(map(str, numbers))} (sum {total}) - {result}")
            
    except FileNotFoundError:
        print(f"Error: The file '{filename}' is missing. Please create the file and try again.")
    except ValueError:
        print(f"Error: The file '{filename}' contains invalid data. Make sure that the numbers are separated by commas.")

process_file("numbers.txt")