import datetime

def convert_date(date_input):
    
    try:
        parts = date_input.split("/")
        
        if len(parts) != 3:
            raise ValueError
            
        month = int(parts[0])
        day = int(parts[1])
        year = int(parts[2])
        
        date_object = datetime.date(year, month, day)
        
        return date_object.strftime("%B %d, %Y")

    except (ValueError, IndexError):
        return "Error: Invalid date format! Please enter the date in mm/dd/yyyy format."

date = input("Enter a date (mm/dd/yyyy): ")
print("Date Output:", convert_date(date))